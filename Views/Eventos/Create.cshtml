@model GuardianGrid.AdminPanel.Models.Evento

<h2>Registrar Novo Evento</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Regiao"></label>
        <input asp-for="Regiao" class="form-control" />
        <span asp-validation-for="Regiao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataOcorrencia"></label>
        <input asp-for="DataOcorrencia" class="form-control" type="date" />
        <span asp-validation-for="DataOcorrencia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="ZonaCritica" class="form-check-input" />
        <label asp-for="ZonaCritica" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
